{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": ["dom", "ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "jsx": "react"
  },
  "include": ["./src/**/*"]
}
